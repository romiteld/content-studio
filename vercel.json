{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "framework": "create-react-app",
  "functions": {
    "api/agents/*.js": {
      "maxDuration": 30
    },
    "api/backend.js": {
      "maxDuration": 30,
      "memory": 1024,
      "includeFiles": "**"
    }
  },
  "rewrites": [
    {
      "source": "/api/agents/:path*",
      "destination": "/api/agents/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/backend"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["iad1"]
}